<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>
<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>
              <table class="table-bordered table-condensed table-striped">
                <% @attendances.each do |day| %>
                <tr>
                  <td>日付</td>
                  <td>曜日</td>
                  <td>終了予定時間</td>
                  <td>翌日</td>
                  <td>業務処理内容</td>
                  <td>指示者確認㊞</td>
                </tr>
                <tr>
                  <td><%= l(day.worked_on, format: :short) %></td>
                  <td>
                    <% if $days_of_the_week[day.worked_on.wday] == "日" %>
                      <font color="red"><%= $days_of_the_week[day.worked_on.wday] + "(休)" %></font>
                    <% elsif $days_of_the_week[day.worked_on.wday] == "土" %>
                      <font color="blue"><%= $days_of_the_week[day.worked_on.wday] + "(休)" %></font>
                    <% else %>
                      <%= $days_of_the_week[day.worked_on.wday] %>
                    <% end %>
                  </td>
                  <td>
                    <%= f.text_field :department, class: "form-control" %>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <% end %>
              </table>

            <div class="center">
              <%= f.submit '申請', class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>