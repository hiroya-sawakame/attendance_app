<% provide(:title, '拠点一覧') %>
<h1>拠点一覧</h1>
<div class="table-responsive">
  <table class="table table-bordered table-condensed table-hover">
    <thead>
    <tr>
      <th class="text-center">拠点地番号</th>
      <th class="text-center">拠点地</th>
      <th class="text-center">拠点種類</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <thead>
    <% @bases.each do |base| %>
      <tr>
        <td><%= base.image %></td>
        <td><%= base.number %></td>
        <td><%= base.place %></td>
        <td><%= base.type %></td>
        <td>
          <%= link_to "削除", basis_url(@base, id: base.id), method: :delete,
                      data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %>
        </td>
        <td>
          <button class="btn btn-primary" data-toggle="modal" data-target="#modal-base<%= base.id %>">編集</button>
          <!-- 2.モーダルの配置 -->
          <div class="modal fade" id="modal-base<%= base.id %>" tabindex="-1">
            <div class="modal-dialog">
              <!-- 3.モーダルのコンテンツ -->
              <div class="modal-content">
                <!-- 4.モーダルのヘッダ -->
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <h4 class="modal-title">【拠点先情報の編集】</h4>
                </div>
                <!-- 5.モーダルのボディ -->
                <div id="modle-base-id<%= @base.id %>">
                  <div class="modal-body">
                    <%= form_with(model: @base, remote: true) do |f| %>

                      <%= f.label :拠点地番号 %>
                      <%= f.text_field :number, class: 'form-control' %>

                      <%= f.label :拠点地 %>
                      <%= f.text_field :place, class: 'form-control' %>

                      <%= f.label :拠点種類 %>
                      <%= f.text_field :type, class: 'form-control' %>

                      <%= f.submit "更新", class: "btn btn-primary" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
    </thead>
  </table>
  <button class="btn btn-primary" data-toggle="modal" data-target="#modal-sample2">
    拠点情報の追加
  </button>
  <!-- 2.モーダルの配置 -->
  <div class="modal fade" id="modal-sample2" tabindex="-1">
    <div class="modal-dialog">
      <!-- 3.モーダルのコンテンツ -->
      <div class="modal-content">
        <!-- 4.モーダルのヘッダ -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">【拠点情報の追加】</h4>
        </div>
        <!-- 5.モーダルのボディ -->
        <div class="modal-body">
          <%= form_with(model: @base, remote: true) do |f| %>

            <%= f.label :拠点番号 %>
            <%= f.text_field :number, class: 'form-control' %>

            <%= f.label :拠点名 %>
            <%= f.text_field :place, class: 'form-control' %>

            <%= f.label :拠点種類 %>
            <%= f.text_field :type, class: 'form-control' %>

            <%= f.submit "拠点情報の追加", class: "btn btn-primary" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
<%= form_for @base do |f| %>
  <%= f.file_field :image %>
  <%= f.submit 'アップロードする'%>
<% end %>