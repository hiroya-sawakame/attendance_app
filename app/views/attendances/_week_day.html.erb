<% if $days_of_the_week[day.worked_on.wday] == "日" %>
  <font color="red"><%= $days_of_the_week[day.worked_on.wday] + "(休)" %></font>
<% elsif $days_of_the_week[day.worked_on.wday] == "土" %>
  <font color="blue"><%= $days_of_the_week[day.worked_on.wday] + "(休)" %></font>
<% else %>
  <%= $days_of_the_week[day.worked_on.wday] %>
<% end %>